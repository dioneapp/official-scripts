{
  "dependencies": {
    "git": {
      "version": "latest"
    },
    "uv": {
      "version": "latest"
    }
  },
  "installation": [
    {
      "name": "Cloning F5-TTS repository",
      "commands": [
        "git clone https://github.com/SWivid/F5-TTS.git f5-tts"
      ]
    },
    {
      "name": "Installing PyTorch",
      "env": {
        "name": "f5-tts-env",
        "version": "3.10",
        "type": "uv"
      },
      "commands": [
        "cd f5-tts",
        {
          "gpus": "nvidia",
          "command": "pip install torch==2.8.0+cu128 torchaudio==2.8.0+cu128 --extra-index-url https://download.pytorch.org/whl/cu128"
        },
        {
          "gpus": "amd",
          "command": "pip install torch==2.5.1+rocm6.2 torchaudio==2.5.1+rocm6.2 --extra-index-url https://download.pytorch.org/whl/rocm6.2"
        },
        {
          "gpus": "intel",
          "command": "pip install torch torchaudio --index-url https://download.pytorch.org/whl/test/xpu"
        },
        {
          "gpus": "apple",
          "command": "pip install torch torchaudio --index-url https://download.pytorch.org/whl/cpu"
        },
        {
          "gpus": "none",
          "command": "pip install torch torchaudio --index-url https://download.pytorch.org/whl/cpu"
        }
      ]
    },
    {
      "name": "Setting up Python environment and installing F5-TTS",
      "env": {
        "name": "f5-tts-env",
        "version": "3.10",
        "type": "uv"
      },
      "commands": [
        "cd f5-tts",
        "uv pip install -e ."
      ]
    }
  ],
  "start": [
    {
      "name": "Starting F5-TTS Gradio interface",
      "catch": "7860",
      "env": "f5-tts-env",
      "commands": [
        "cd f5-tts",
        "f5-tts_infer-gradio --port 7860"
      ]
    }
  ]
}